//* Listar todos los animales en el Zoologico
use("db_zoologico");
db.animales.aggregate([{
    $project: {
        "_id":0,
        "id":"$_id",
        "name":"$nombre",
        "species":"$especie",
        "class":"$clase",
        "sub_class":"$sub_clase",
        "origin":"$pais_origen",
        "state":"$estado",
        "curiosity":"$dato_curioso",
        "zone":"$zona",
        "belonging_area":"$area"
    }
}]);

