//* Listar animales por sub_clase (Terrestres) y estado (En peligro de extinción)
use("db_zoologico");
db.animales.aggregate([
    {
        $match: {
            sub_clase: "Terrestre",
            estado: "En peligro de extinción"
        }
    },
    {
        $project: {
            "_id": 0,
            "id": "$_id",
            "name": "$nombre",
            "species": "$especie",
            "class": "$clase",
            "sub_class": "$sub_clase",
            "origin": "$pais_origen",
            "state": "$estado",
            "curiosity": "$dato_curioso",
            "zone": "$zona",
            "belonging_area": "$area"
        }
    }
]);

