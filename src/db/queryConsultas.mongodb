            "_id":0,
            "id":"$_id",
            "date":"$fecha",
            "state":"$estado",
            "belonging_area":"$area",
            "description_info":"$descripcion",
            "start_time":"$hora_inicio",
            "end_time":"$hora_finalizacion"
        }
    }
])

